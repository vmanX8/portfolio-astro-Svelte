---
import { ClientRouter } from "astro:transitions";
import type { Locale } from "../lib/i18n/messages";
import Footer from "../components/Footer.svelte";
import "../styles/global.css";

const lang = (Astro.currentLocale as Locale) || "en";

// SEO props (required per page)
const { title, description } = Astro.props;
---

<!doctype html>
<html lang={lang === "gr" ? "el" : "en"}>
    <head>
        <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <ClientRouter />

        {title && <title>{title}</title>}
        {description && <meta name="description" content={description} />}

        {title && <meta property="og:title" content={title} />}
        {
            description && (
                <meta property="og:description" content={description} />
            )
        }
        <meta property="og:type" content="website" />

        <slot name="head" />
    </head>

    <body
        class="bg-[color:var(--background)] text-white antialiased min-h-screen flex flex-col font-sans"
    >
        <main class="flex-1 animate-fadeIn">
            <slot />
        </main>

        <Footer client:load />
    </body>
</html>

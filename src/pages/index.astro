---
import BaseLayout from "../layouts/BaseLayout.astro";
import NavBar from "../components/NavBar.svelte";
import HeroSect from "../components/sections/HeroSect.svelte";
import { tSeo } from "../lib/i18n/server";
import type { Locale } from "../lib/i18n/messages";

const lang = (Astro.currentLocale as Locale) || "en";
const seo = tSeo(lang);
---

<BaseLayout title={seo.homeTitle} description={seo.homeDescription} lang={lang}>
	<NavBar client:load />
	<HeroSect client:load />
</BaseLayout>

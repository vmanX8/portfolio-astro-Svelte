---
import BaseLayout from "../layouts/BaseLayout.astro";
import NavBar from "../components/NavBar.svelte";
import { tSeo } from "../lib/i18n/server";
import type { Locale } from "../lib/i18n/messages";

const lang = (Astro.currentLocale as Locale) || "en";
const seo = tSeo(lang);
---

<BaseLayout title={seo.homeTitle} description={seo.homeDescription} lang={lang}>
	<NavBar client:load />
	<section class="max-w-5xl mx-auto px-4 pt-28 md:pt-32 pb-16 space-y-4">
		<h1 class="text-4xl md:text-5xl font-bold leading-tight">Welcome</h1>
		<p class="text-slate-300 max-w-2xl">
			Home content will go here once sections are ready.
		</p>
	</section>
</BaseLayout>
